{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "VITE_SUPABASE_URL": "@supabase-url",
    "VITE_SUPABASE_ANON_KEY": "@supabase-anon-key",
    "VITE_VERIFONA_MERCHANT_CODE": "@verifona-merchant-code",
    "VITE_VERIFONA_SECRET_KEY": "@verifona-secret-key",
    "VITE_VERIFONA_ENVIRONMENT": "production",
    "VITE_APP_URL": "@app-url"
  },
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}